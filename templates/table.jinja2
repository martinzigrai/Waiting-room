{% extends 'layout.jinja2' %}

{% block body %}
  <h1>Table<br> <small> Welcome {{session.username}}</small></h1>
    <a class="btn btn-success" href="#">Add a new data </a>
    <hr>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Username</th>
            <th></th>
            <th></th>
        </tr>
        {% for user in my_list %}
            <tr>
                <td>{{ user.user_id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td><a href="#" class="btn btn-default pullright">Edit</a></td>
                <td><a href="#" class="btn btn-danger pullright">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}